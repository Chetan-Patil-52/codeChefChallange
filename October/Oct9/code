#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
    int t;
    cin >> t;
    while(t--){
        int s,x,y,z;
        cin >> s >> x >> y >> z;
        if(s-x-y >=z){
            cout << 0;
        }else if(s - min(x,y) >= z){
            cout << 1;
        }else if(s >=z ){
            cout << 2;
        }
        cout << endl;
    }
}
