#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
    int t;
    cin >> t;
    while(t--){
        int n;
        int sum = 0;
        cin >> n;
        for(int i = 0;i<n;i++){
            int x;
            cin >> x;
            sum += x;
        }
        if(sum % 2 != 0){
            cout << -1 << endl;
        }else if(sum > 0){
            cout << sum/2 << endl;
        }else{
            cout << sum/2 * -1<< endl;
        }
    }
}
